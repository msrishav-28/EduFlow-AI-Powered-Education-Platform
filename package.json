{
  "name": "eduflow-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "EduFlow - A premium AI-powered educational platform with responsive design and premium animations",
  "keywords": [
    "eduflow",
    "education",
    "ai",
    "react",
    "typescript",
    "responsive",
    "premium",
    "framer-motion"
  ],
  "author": "EduFlow Team",
  "license": "MIT",
  "homepage": "https://github.com/msrishav-28/eduflow-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/msrishav-28/eduflow-platform.git"
  },
  "bugs": {
    "url": "https://github.com/msrishav-28/eduflow-platform/issues"
  },
  "scripts": {
  "dev": "cd eduflow-next && npm run dev",
  "build": "cd eduflow-next && npm run build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:premium": "npm run type-check && npm run build",
    "lint": "eslint . --ext ts,tsx --max-warnings 50",
    "lint:fix": "eslint . --ext ts,tsx --fix --max-warnings 50",
  "preview": "cd eduflow-next && npm run start",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist node_modules/.vite",
    "start": "npm run preview",
    "install:all": "npm install",
    "setup:env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { fs.copyFileSync('.env.example', '.env'); console.log('✅ Created .env file from template'); console.log('⚠️  Please configure your API keys in .env file'); } else { console.log('✅ .env file already exists'); }\"",
    "setup": "npm run setup:env",
    "postinstall": "npm run setup:env",
    "health": "npm run type-check && echo '✅ TypeScript compiles successfully' && echo '✅ Project ready for development!'",
    "health:strict": "npm run type-check && npm run lint",
    "lint:quick": "eslint . --ext ts,tsx --max-warnings 200 --quiet",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build:premium && firebase deploy",
    "docker:build": "docker build -t edulearn-frontend .",
    "docker:run": "docker run -p 3000:80 edulearn-frontend"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.2",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "firebase": "^10.14.1",
    "framer-motion": "^12.23.12",
    "highlight.js": "^11.9.0",
    "lottie-react": "^2.4.0",
    "lucide-react": "^0.439.0",
    "mammoth": "^1.8.0",
    "pdfjs-dist": "^4.6.82",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.5.2",
    "react-intersection-observer": "^9.5.3",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.30.1",
    "react-select": "^5.8.0",
    "react-textarea-autosize": "^8.5.3",
    "recharts": "^2.8.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.19.9",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^23.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.11.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
